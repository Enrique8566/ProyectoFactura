<style>
          table {
                    table-layout: fixed;
                    width: 800px;
          }

          th,
          td {

                    width: 70px;
                    word-wrap: break-word;
          }
</style>
<!--datatables-->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">


<div class="row align-items-start text-center">
          <div class="col ">
                    <h1>
                              Registro de Proveedores
                    </h1>
          </div>
</div>
<div class="form-control text-wrap">
          <table class="table dg-opacity-25 table-striped table-hover " id="tabla2" style="font-size: 0.8em;">
                    <thead>
                              <tr>
                                        <td >ID</td>
                                        <td>rut</td>
                                        <td>razonSocial</td>
                                        <td>alias</td>
                                        <td>giro</td>
                                        <td>Direccion</td>
                                        <td>ciudad</td>
                                        <td>telefono</td>
                                        <td>coreo</td>
                                        <td style="width: 40px;">user_id</td>
                                        <td>created_at</td>
                                        <td>updated_at</td>
                                        <td >Cambios</td>
                              </tr>
                    </thead>

                    <tbody>
                              <% mostrar.forEach(element=> { %>
                                        <tr>
                                                  <td>
                                                            <%= element.id %>
                                                  </td>
                                                  <td>
                                                            <%= element.rut %>
                                                  </td>
                                                  <td>
                                                            <%= element.razonSocial %>
                                                  </td>
                                                  <td>
                                                            <%= element.alias %>
                                                  </td>
                                                  <td>
                                                            <%= element.giro %>
                                                  </td>
                                                  <td>
                                                            <%= element.direccion %>
                                                  </td>
                                                  <td>
                                                            <%= element.ciudad %>
                                                  </td>
                                                  <td>
                                                            <%= element.telefono %>
                                                  </td>
                                                  <td>
                                                            <%= element.correo %>
                                                  </td>
                                                  <td>
                                                            <%= element.user_id %>
                                                  </td>
                                                  <td>
                                                            <% fechaCrea=element.created_at
                                                                      fechaCrea=fechaCrea.slice(0,10).split("")
                                                                      fechaCrea=fechaCrea[8]+fechaCrea[9]+fechaCrea[7]+fechaCrea[5]+fechaCrea[6]+fechaCrea[4]+fechaCrea[0]+fechaCrea[1]+fechaCrea[2]+fechaCrea[3]%>
                                                                      <%= fechaCrea %>
                                                  </td>
                                                  <td>
                                                            <% let fechaActu=element.updated_at
                                                                      fechaActu=fechaActu.slice(0,10).split("")
                                                                      fechaActu=fechaActu[8]+fechaActu[9]+fechaActu[7]+fechaActu[5]+fechaActu[6]+fechaActu[4]+fechaActu[0]+fechaActu[1]+fechaActu[2]+fechaActu[3]%>
                                                                      <%= fechaActu %>
                                                  </td>
                                                  <td>
                                                            <a href="/proveedor/editar/<%= element.id %>" class="btn btn-primary"><i class="bi bi-back"></i></a>
                                                        </td>
                                        </tr>
                                        <% }) %>
                    </tbody>


          </table>
</div>

<!-- DATATABLES -->
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>

<script>
          $(document).ready(function () {
                    $('#tabla2').DataTable({
                              language: {
                                        processing: "Tratamiento en curso...",
                                        search: "Buscar&nbsp;:",
                                        lengthMenu: "Agrupar de _MENU_ items",
                                        info: "Mostrando del item _START_ al _END_ de un total de _TOTAL_ items",
                                        infoEmpty: "No existen datos.",
                                        infoFiltered: "(filtrado de _MAX_ elementos en total)",
                                        infoPostFix: "",
                                        loadingRecords: "Cargando...",
                                        zeroRecords: "No se encontraron datos con tu busqueda",
                                        emptyTable: "No hay datos disponibles en la tabla.",
                                        paginate: {
                                                  first: "Primero",
                                                  previous: "Anterior",
                                                  next: "Siguiente",
                                                  last: "Ultimo"
                                        },
                                        aria: {
                                                  sortAscending: ": active para ordenar la columna en orden ascendente",
                                                  sortDescending: ": active para ordenar la columna en orden descendente"
                                        }
                              },

                              lengthMenu: [[5, 10, 15, 20, 25, 30, -1], [5, 10, 15, 20, 25, 30, "Todos"]],
                    })
          })    
</script>